<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_border"
    android:layout_marginLeft="@dimen/list_horizontal_margin"
    android:layout_marginRight="@dimen/list_horizontal_margin"
    android:layout_marginTop="@dimen/list_vertical_margin"
    android:layout_marginBottom="@dimen/list_vertical_margin">
    <LinearLayout
        android:layout_toLeftOf="@+id/itemArrow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtItemTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_horizontal_margin"
            android:textSize="@dimen/title_text_size"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorTextTitle"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/txtItemDesc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/description_text_size"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorTextDescription"
                android:layout_weight="0.3"/>
            <ImageView
                android:id="@+id/imgItemImage"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.7"
                android:src="@drawable/image_placeholder"/>
        </LinearLayout>
     </LinearLayout>
    <ImageView
        android:id="@+id/itemArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>